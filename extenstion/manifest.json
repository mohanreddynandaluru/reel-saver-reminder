{
  "manifest_version": 3,
  "name": "Insta Notes",
  "version": "1.0",
  "description": "Save Instagram posts with notes and reminders. Click the save button on any Instagram post to add your personal notes and set reminders.",
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insta Notes"
  },
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting", 
    "notifications", 
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://*.firebaseapp.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon48.png", "firebase-auth.html", "firebase-signup.html", "firebase-auth.js", "firebase-signup.js", "firebase-config.js", "firebase-bundle.js", "error-handler.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
